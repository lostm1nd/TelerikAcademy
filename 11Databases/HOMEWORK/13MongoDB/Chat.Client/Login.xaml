<Window x:Class="Chat.Client.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="300" Width="300">
    <Grid>
        <Label Content="Enter username" HorizontalAlignment="Left" Height="27" Margin="73,79,0,0" VerticalAlignment="Top" Width="139" FontWeight="Bold" FontStyle="Italic"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="73,111,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="139" Name="username"/>
        <Button Content="Go chat" HorizontalAlignment="Left" Margin="103,139,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
    </Grid>
</Window>
